<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/refresh_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@drawable/refresh" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_one"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@drawable/button_bg_one"
                android:stateListAnimator="@null"
                android:text="倒锤子形态"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg_two"
                android:stateListAnimator="@null"
                android:text="上涨中继"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/button_four"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg_four"
                android:stateListAnimator="@null"
                android:text="三线合一"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/button_five"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg_four"
                android:stateListAnimator="@null"
                android:text="量能最低"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/button_six"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg_six"
                android:stateListAnimator="@null"
                android:text="小十字星"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg_three"
                android:stateListAnimator="@null"
                android:text="龙头牛股"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>